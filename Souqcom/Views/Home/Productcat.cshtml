@model List<Product>
    <!-- Product Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-0 gx-5 align-items-end">
            <div class="col-lg-6">
                <div class="section-header text-start mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
                    <h1 class="display-5 mb-3">Our Products</h1>
                    <p>You can dreram and we are going to real it.</p>
                </div>
            </div>
        </div>
        <form asp-controller="Home" asp-action="Productsearch" method="get">
            <div class="row">
                <input type="submit" class="col-sm-2 btn btn-primary" value="Search" />
                <div class="col-sm-10">
                    <input type="text" name="xname" id="xname" style="text-align:left" class="form-control" placeholder="Search for product..." />
                </div>
            </div>
        </form>
        <br />
        <div class="tab-content">
            <div class="tab-pane fade show p-0 active">
                <div class="row g-4">
                    @foreach (var item in Model)
                    {
                        <div class="col-xl-3 col-lg-4 col-md-6 wow fadeInUp " data-wow-delay="0.1s">
                            <div class="product-item">
                                <div class="position-relative bg-light overflow-hidden">
                                    <img class="img-fluid w-100" src="~/@item.Photo" alt="">
                                    <div class="bg-secondary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3">@item.Quantity</div>
                                </div>
                                <div class="text-center p-4">
                                    <a class="d-block h5 mb-2" href="">@item.Name</a>
                                    @if (item.Priceafterdiscount == 0 || item.Priceafterdiscount == null)
                                    {
                                        <span class="text-primary me-1"><strong>Price</strong>:  $@item.Price</span>
                                    }
                                    else
                                    {
                                        <span class="text-primary me-1"><strong>New Price</strong>:  $@item.Priceafterdiscount</span>
                                        <span class="text-body text-decoration-line-through"><strong>Price</strong>:  $@item.Price</span>
                                    }
                                </div>
                                <div class="d-flex border-top">
                                    <small class="w-50 text-center border-end py-2">
                                        <a class="text-body" href="/Home/Productdetails/@item.Id"><i class="fa fa-eye text-primary me-2"></i>View detail</a>
                                    </small>
                                    <small class="w-50 text-center py-2">
                                        <a class="text-body" href="/Home/Cart"><i class="fa fa-shopping-bag text-primary me-2"></i>Add to cart</a>
                                    </small>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Product End -->